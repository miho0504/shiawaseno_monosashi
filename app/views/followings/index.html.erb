<h3>友達一覧</h3>

<% @users ||= current_user %>
<% if @user.followings.count == 0 %>
 <p>友達が追加されてません</p>
<% else %>
  <% @user.followings.each do |user| %>
    <%= user.name %>
    <%= render partial: 'users/follow_form', :locals => {:user => user} %>
    <%= link_to "日記を見る", followers_path(user) %>
  <% end %>
<% end %>
